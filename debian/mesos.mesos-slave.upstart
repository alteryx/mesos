description "Mesos Slave"

env DEFAULTFILE=/etc/default/mesos

start on runlevel [2345]
respawn

pre-start script
  [ ! -f "$DEFAULTFILE" ] && { stop; exit 0; }
  enabled=$(grep RUN_MESOS_SLAVE=yes $DEFAULTFILE)
  [ -z "$enabled" ] && { stop; exit 0; }
  ulimit -n 8192
end script

script
  exec /usr/sbin/mesos-slave --conf=/var/mesos/conf
end script
