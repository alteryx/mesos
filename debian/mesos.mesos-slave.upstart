description "Mesos Master"

env DEFAULTFILE=/etc/default/mesos

start on filesystem
stop on runlevel ![2345]
respawn

limit nofile 8192 8192

script
  [ -f "$DEFAULTFILE" ] && . "$DEFAULTFILE"
  if [ "x$RUN_MESOS_SLAVE" = "xyes" ]; then
    exec /usr/sbin/mesos-slave --conf=/var/mesos/conf
  fi
end script
