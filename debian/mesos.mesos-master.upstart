description "Mesos Master"

env DEFAULTFILE=/etc/default/mesos

start on runlevel [2345]
respawn

pre-start script
  [ ! -f "$DEFAULTFILE" ] && { stop; exit 0; }
  . $DEFAULTFILE
end script

script
  if [ "x$RUN_MESOS_MASTER" = "xyes" ]
  then
    ulimit -n 8192
    exec /usr/sbin/mesos-master --conf=/var/mesos/conf
  fi
end script
